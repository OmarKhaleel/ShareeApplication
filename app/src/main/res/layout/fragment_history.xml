<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".History">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/fourth_background"
        android:scaleType="fitXY"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ProfilePictureSIV"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_margin="24dp"
        android:src="@drawable/profile"
        app:shapeAppearanceOverlay="@style/CircularProfilePicture"
        app:strokeWidth="1dp"
        app:strokeColor="@color/black"
        android:padding="5dp"
        android:clickable="true"/>

    <ImageButton
        android:id="@+id/NotificationsBellIB"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:background="@null"
        android:src="@drawable/bell" />

    <TextView
        android:id="@+id/FullNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Sharee, Full Name"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_below="@+id/ProfilePictureSIV"
        android:layout_marginStart="28dp"/>

    <ImageView
        android:id="@+id/Line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/line"
        android:layout_below="@+id/FullNameTV"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/NoActivitiesYetTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="There aren't any activities on your account yet."
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/Line"
        android:layout_marginTop="96dp"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/TryAddingBillTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Try adding a bill!"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/NoActivitiesYetTV"
        android:layout_marginTop="8dp"
        android:visibility="visible"/>

</RelativeLayout>