<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Account">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/fourth_background"
        android:scaleType="centerCrop"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_back_24"
        android:background="@null"
        android:layout_margin="12dp"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/settings"
        android:background="@null"
        android:layout_margin="12dp"
        android:layout_alignParentRight="true"/>

    <LinearLayout
        android:id="@+id/RootView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="56dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ProfilePictureSIV"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/profile"
                app:shapeAppearanceOverlay="@style/CircularProfilePicture"
                app:strokeWidth="1dp"
                app:strokeColor="@color/black"
                android:padding="5dp"
                android:clickable="true"
                android:layout_marginStart="16dp"/>

            <TextView
                android:id="@+id/FullNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full Name"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginStart="16dp"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:weightSum="2"
                android:gravity="center">

                <TextView
                    android:id="@+id/AboutTabTV"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:text="About"
                    android:textColor="#80A6F2"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/MyWalletTabTV"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:text="My Wallet"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_weight="1"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/Line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/line"
                android:layout_gravity="center"/>

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/FrameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/round_edges_page_background"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/RootView"/>

    <TextView
        android:id="@+id/MyInfoTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Info"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="220dp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/edit_info"
        android:background="@null"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/MyInfoTV"
        android:layout_marginTop="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="6"
            android:layout_marginHorizontal="24dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Email"
                android:textStyle="bold"
                android:textSize="17sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="test@gmail.com"
                android:textSize="17sp"
                android:gravity="end"
                android:layout_marginEnd="8dp"/>

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/line"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="6"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="24dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Phone"
                android:textStyle="bold"
                android:textSize="17sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="+962781504161"
                android:textSize="17sp"
                android:gravity="end"
                android:layout_marginEnd="8dp"/>

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/line"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="6"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="24dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Date of Birth"
                android:textStyle="bold"
                android:textSize="17sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="Not set"
                android:textSize="17sp"
                android:gravity="end"
                android:layout_marginEnd="8dp"/>

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/line"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="6"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="24dp"
            android:gravity="center">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Password"
                android:textStyle="bold"
                android:textSize="17sp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Change Password"
                android:textSize="12sp"
                android:textStyle="bold"
                android:padding="16dp"
                android:textAllCaps="false"
                style="@style/FirstButtonStyle"
                android:layout_weight="3"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last changed at"
            android:layout_marginStart="28dp"
            android:layout_marginTop="8dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/line"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="6"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="24dp"
            android:gravity="center">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="My CliQ"
                android:textStyle="bold"
                android:textSize="17sp"/>

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_box_24"
                android:background="@null"
                android:layout_weight="1"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not set"
            android:layout_marginStart="28dp"
            android:layout_marginTop="16dp"/>

    </LinearLayout>

</RelativeLayout>